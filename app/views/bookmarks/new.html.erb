<div class="container mt-3">
  <h1>New Bookmark</h1>
  <%= link_to "Home", root_path %>
  <hr>
    <%= simple_form_for [@list, @bookmark] do |f| %>
      <%= f.association :movie, collection: Movie.all.order(:title), prompt: "Choose a Movie" %>
      <%= f.input :comment, placeholder: 'Comment...' %>
      <%= f.submit %>
    <% end %>
</div>
